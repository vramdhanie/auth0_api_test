doctype html
html.mdc-typography
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/material-components-web.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    script(src="https://cdn.auth0.com/js/lock/10.3/lock.min.js")
  body

    header.mdc-toolbar.mdc-toolbar--fixed
      section.mdc-toolbar__section.mdc-toolbar__section--align-start
        a.material-icons business
        span.mdc-toolbar__title
          block head
      section.mdc-toolbar__section.mdc-toolbar__section--align-end(role='toolbar')
        a.material-icons(href='/',aria-label='Home',alt='Home') home
        a.material-icons(href='/user',aria-label='Profile',alt='Profile') account_circle
    main
      div.mdc-toolbar-fixed-adjust
         block content
    script(src='/js/material-components-web.js')
    script(mdc.autoInit())
